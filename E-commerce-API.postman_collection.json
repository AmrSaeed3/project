{
  "info": {
    "_postman_id": "b9c7d6e5-f4g3-h2i1-j0k9-l8m7n6o5p4q3",
    "name": "E-commerce API",
    "description": "API collection for e-commerce platform including phone verification, coupons, and cart management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Phone OTP",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"phone\": \"+201228747582\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/phone/send-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "phone", "send-otp"]
            },
            "description": "Send OTP verification code to user's phone"
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"phone\": \"+201228747582\",\n    \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/phone/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "phone", "verify-otp"]
            },
            "description": "Verify OTP code sent to user's phone"
          }
        }
      ]
    },
    {
      "name": "Coupons",
      "item": [
        {
          "name": "Get All Coupons",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/coupon",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "coupon"]
            },
            "description": "Get all available coupons (admin only)"
          }
        },
        {
          "name": "Get Coupon by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/coupon/{{couponId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "coupon", "{{couponId}}"]
            },
            "description": "Get a specific coupon by ID"
          }
        },
        {
          "name": "Create Coupon",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"SUMMER2023\",\n    \"expire\": \"2023-09-30\",\n    \"discount\": 15\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/coupon",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "coupon"]
            },
            "description": "Create a new coupon (admin only)"
          }
        },
        {
          "name": "Update Coupon",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"SUMMER2023-EXTENDED\",\n    \"expire\": \"2023-10-15\",\n    \"discount\": 20\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/coupon/{{couponId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "coupon", "{{couponId}}"]
            },
            "description": "Update an existing coupon (admin only)"
          }
        },
        {
          "name": "Delete Coupon",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/coupon/{{couponId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "coupon", "{{couponId}}"]
            },
            "description": "Delete a coupon (admin only)"
          }
        },
        {
          "name": "Verify Coupon",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"SUMMER2023\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/coupon/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "coupon", "verify"]
            },
            "description": "Verify if a coupon is valid and get discount amount"
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get User Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/cart",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "cart"]
            },
            "description": "Get the current user's shopping cart"
          }
        },
        {
          "name": "Add to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"productId\": \"{{productId}}\",\n    \"quantity\": 2,\n    \"color\": \"black\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/cart",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "cart"]
            },
            "description": "Add a product to the user's cart"
          }
        },
        {
          "name": "Update Cart Item",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"quantity\": 3\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/cart/{{itemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "cart", "{{itemId}}"]
            },
            "description": "Update quantity or color of a cart item"
          }
        },
        {
          "name": "Remove from Cart",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/cart/{{itemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "cart", "{{itemId}}"]
            },
            "description": "Remove an item from the cart"
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/cart",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "cart"]
            },
            "description": "Remove all items from the cart"
          }
        },
        {
          "name": "Apply Coupon",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"coupon\": \"SUMMER2023\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/cart/apply-coupon",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "cart", "apply-coupon"]
            },
            "description": "Apply a coupon to the cart"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": "your-jwt-token-here"
    },
    {
      "key": "couponId",
      "value": "coupon-id-here"
    },
    {
      "key": "productId",
      "value": "product-id-here"
    },
    {
      "key": "itemId",
      "value": "cart-item-id-here"
    }
  ]
}